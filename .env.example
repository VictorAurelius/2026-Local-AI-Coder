# ============================================================================
# Local AI Coder — Cấu hình môi trường
# Copy file này thành .env và chỉnh sửa theo nhu cầu
# ============================================================================

# --- Model ---
MODEL_NAME=qwen3-coder:30b
MODEL_CUSTOM_NAME=java-expert

# --- Ollama ---
OLLAMA_PORT=11434
OLLAMA_KEEP_ALIVE=5m
OLLAMA_NUM_PARALLEL=1
OLLAMA_MAX_LOADED_MODELS=1
OLLAMA_MEMORY_LIMIT=28g

# --- Open WebUI ---
WEBUI_PORT=3000
WEBUI_AUTH=true
ENABLE_SIGNUP=false

# --- Nginx Proxy (tùy chọn) ---
PROXY_PORT=11435
ALLOWED_CLIENT_IP=192.168.1.50

# --- SSH Tunnel (tùy chọn) ---
SSH_SERVER_USER=ollama-user
SSH_SERVER_IP=192.168.1.100
SSH_SERVER_PORT=22
SSH_KEY_PATH=~/.ssh/id_ed25519
